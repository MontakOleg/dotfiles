" Disable compatibility with vi
set nocompatible

" Enable syntax and plugins
syntax on
filetype plugin indent on

call plug#begin('~/.vim/plugged')

" file manager
Plug 'scrooloose/nerdtree'

" file search
Plug 'mileszs/ack.vim'

" fuzzy finder
Plug '/usr/local/opt/fzf'
Plug 'junegunn/fzf.vim'

" swift support
Plug 'keith/swift.vim'

Plug 'luochen1990/rainbow'

" clojure repl
Plug 'tpope/vim-fireplace'

" clojure highlight and indent
Plug 'guns/vim-clojure-static'

" graphql highlight
Plug 'jparise/vim-graphql'

call plug#end()

" Show percentage of file
:set ruler

" Smart case insensetive search
:set ignorecase
:set smartcase

" No wrap
:set nowrap

" Enable mouse
:set mouse=a

" Tabs
setlocal shiftwidth=4 softtabstop=4 expandtab

" Use ag if available
if executable('ag')
  " Use Ag over Grep
  set grepprg=ag\ --nogroup\ --nocolor

  " Use ag in CtrlP for listing files. Lightning fast and respects .gitignore
  let g:ctrlp_user_command = 'ag %s -l --nocolor -g ""'

  " Use ag in :Ack
  let g:ackprg = 'ag --vimgrep'
endif

" Remap leader key from \ to ,
let mapleader = ","

" Turn on line numbers by typing ,num
nnoremap <leader>n :set number<cr>

" Clear a search by typing ,<space>
nnoremap <leader><space> :noh<cr>

" FZF bindings
nmap <Leader>o :Files<CR>
nmap <Leader>go :GFiles<CR>
nmap <Leader>b :Buffers<CR>

" swift format
nnoremap <leader>F :!swiftformat % --swiftversion 5<cr>

" enable rainbow
let g:rainbow_active = 1

" open/close NerdTree
map <C-n> :NERDTreeToggle<CR>
